<div class="donation-section">
    <h2 class="titulo-donacion">¡Ayuda a nuestros amigos peludos!</h2>
    <p>Tu generosidad hace posible que sigamos cuidando y protegiendo a las mascotas sin hogar. ¡Donemos juntos!</p>
    <div class="donation-form">
        <label for="amount">Monto de la donación:</label>
        <input type="number" id="amount" placeholder="Ingresa el monto en USD">
        <button onclick="donate()">Donar</button>
    </div>
    <div class="confirmation-message" id="confirmationMessage"></div>
</div>
<script>
function donate() {
    var amount = document.getElementById('amount').value;
    var confirmationMessage = document.getElementById('confirmationMessage');
    
    if (amount > 0) {
        confirmationMessage.innerHTML = '¡Gracias por tu donación de ' + amount + ' USD! 🐾';
    } else {
        confirmationMessage.innerHTML = 'Por favor, ingresa un monto válido.';
    }
}
</script>
