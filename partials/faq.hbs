<h2>Preguntas Frecuentes</h2>
{{#each preguntas}}
<div class="contenedor" onclick="toggleText(this)">
    <h3>{{title}} <i class="fas fa-chevron-down"></i></h3>
    <p class="texto-oculto">{{respuesta}}</p>
</div>
{{/each}}

 <script>
        function toggleText(element) {
            var texto = element.querySelector('.texto-oculto');

            if (window.getComputedStyle(texto).display === "none") {
                texto.style.display = "block";
            } else {
                texto.style.display = "none";
            }
            console.log('Hola, esto es un mensaje de registro en la consola');
        }
    </script>
